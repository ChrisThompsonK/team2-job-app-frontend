{% extends "layouts/base.njk" %}

{% block title %}Home - {{ super() }}{% endblock %}

{% block content %}
<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card shadow-sm">
      <div class="card-body text-center">
        <h1 class="card-title display-4 text-primary">{{ message }}</h1>
        <p class="lead">Welcome to our modern Node.js TypeScript application!</p>
        
        <div class="row mt-4">
          <div class="col-md-6">
            <div class="card bg-light">
              <div class="card-body">
                <h5 class="card-title">Application Info</h5>
                <ul class="list-unstyled">
                  <li><strong>Name:</strong> {{ app }}</li>
                  <li><strong>Version:</strong> {{ version }}</li>
                  <li><strong>Environment:</strong> 
                    <span class="badge {{ 'bg-success' if environment === 'production' else 'bg-warning' }}">
                      {{ environment }}
                    </span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="card bg-light">
