# ============================================================================
# Environment Variables Template
# ============================================================================
# Copy this file to .env and update the values for your local development
# 
# IMPORTANT: 
# - Never commit .env files to version control (already in .gitignore)
# - All environment variables are OPTIONAL and have sensible defaults
# - Values must not contain quotes unless the quotes are part of the value
# - For production, use platform-specific environment variable tools
# ============================================================================

# ============================================================================
# Server Configuration
# ============================================================================
# Environment mode (development, production, test)
# Default: development
NODE_ENV=development

# Port number for the server to listen on
# Default: 3000
PORT=3000

# Host address to bind the server to
# Default: localhost
HOST=localhost

# ============================================================================
# API Configuration
# ============================================================================
# Base URL for the backend API
# Default: http://localhost:8080
API_BASE_URL=http://localhost:8080

# Request timeout in milliseconds
# Default: 5000
API_TIMEOUT=5000

# ============================================================================
# Application Information
# ============================================================================
# Display name of the application
# Default: Kainos Job Application Portal
APP_NAME=Kainos Job Application Portal

# Application version number
# Default: 1.0.0
APP_VERSION=1.0.0

# Short description of the application
# Default: Modern Job Application Frontend
APP_DESCRIPTION=Modern Job Application Frontend

# ============================================================================
# Feature Flags
# ============================================================================
# Enable mock data fallback when API is unavailable
# Values: true, false
# Default: true
ENABLE_MOCK_DATA=true

# Enable dark mode functionality
# Values: true, false
# Default: true
ENABLE_DARK_MODE=true

# Enable accessibility features
# Values: true, false
# Default: true
ENABLE_ACCESSIBILITY_FEATURES=true

# ============================================================================
# Logging Configuration
# ============================================================================
# Logging level (debug, info, warn, error)
# Default: info
LOG_LEVEL=info

# Enable detailed debug logs
# Values: true, false
# Default: false
ENABLE_DEBUG_LOGS=false

# ============================================================================
# Session and Storage
# ============================================================================
# Session timeout in milliseconds
# Default: 3600000 (1 hour)
SESSION_TIMEOUT=3600000

# Prefix for localStorage keys to avoid collisions
# Default: kainos_job_app_
STORAGE_PREFIX=kainos_job_app_
