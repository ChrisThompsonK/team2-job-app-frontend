{
  "name": "team2-job-app-frontend",
  "version": "1.0.0",
  "description": "Modern Node.js TypeScript frontend application",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx --watch --env-file=.env src/index.ts",
    "build": "npm run build:css && tsc",
    "build:css": "tailwindcss -i src/styles/input.css -o public/css/styles.css",
    "build:css:watch": "tailwindcss -i src/styles/input.css -o public/css/styles.css --watch",
    "build:css:prod": "tailwindcss -i src/styles/input.css -o public/css/styles.css --minify",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test tests/e2e/",
    "test:e2e:headed": "playwright test tests/e2e/ --headed",
    "e2e": "playwright test",
    "e2e:run": "playwright test --reporter=html",
    "e2e:debug": "playwright test --debug",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright show-report",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "frontend"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/cli": "^4.1.13",
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.3",
    "@types/form-data": "^2.2.1",
    "@types/jsdom": "^27.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.6.0",
    "@types/nunjucks": "^3.2.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chokidar": "^3.6.0",
    "daisyui": "^5.1.26",
    "jsdom": "^27.0.0",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/express-session": "^1.18.2",
    "@types/session-file-store": "^1.2.6",
    "axios": "^1.12.2",
    "body-parser": "^2.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "form-data": "^4.0.4",
    "lucide": "^0.544.0",
    "multer": "^2.0.2",
    "nunjucks": "^3.2.4",
    "session-file-store": "^1.5.0"
  }
}
