# Production Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# API Configuration
# Update this to your production backend API URL
API_BASE_URL=https://api.yourdomain.com
API_TIMEOUT=10000

# Application Configuration
APP_NAME=team2-job-app-frontend
APP_VERSION=1.0.0

# Session & Security
# CRITICAL: Generate a strong secret key for production!
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# Logging
LOG_LEVEL=warn

# Frontend URLs
FRONTEND_URL=https://yourdomain.com

# Feature Flags
ENABLE_DEBUG=false
ENABLE_ANALYTICS=true
