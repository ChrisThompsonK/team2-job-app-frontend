{% extends "templates/layout.njk" %}

{% block applicationTitle %}Apply for {{ jobRole.roleName }} | Kainos{% endblock %}

{% block content %}
<main id="main-content" class="pt-4">
<div class="container mx-auto px-4 py-8">
    <!-- Header Section -->
    <header class="text-center mb-12">
        <div class="bg-gradient-to-r from-blue-600 via-blue-700 to-green-600 rounded-3xl shadow-2xl p-12 text-white relative overflow-hidden">
            <!-- Animated background -->
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 via-blue-700/20 to-green-600/20 animate-pulse"></div>
            
            <!-- Decorative elements -->
            <div class="absolute top-4 right-4 w-20 h-20 bg-white/10 rounded-full blur-xl animate-pulse"></div>
            <div class="absolute bottom-4 left-4 w-16 h-16 bg-green-400/20 rounded-full blur-lg animate-pulse" style="animation-delay: 1s"></div>

            <!-- Content -->
            <div class="relative z-10">
                <!-- Kainos Logo -->
                <div class="flex items-center justify-center mb-8">
                    <img src="/kainos-dark-bg.png" alt="Kainos Logo" class="h-16 w-auto">
                </div>
                
                <h1 class="text-4xl md:text-6xl font-light mb-6">
                    {% if isEditMode %}
                        Edit Your Application
                    {% else %}
                        Apply for {{ jobRole.roleName }}
                    {% endif %}
                </h1>
                
                <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6 inline-block">
                    <p class="text-xl">
                        {% if isEditMode %}
                            ‚úèÔ∏è Update Your Application
                        {% else %}
                            üìù Submit Your Application
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
    </header>

    <div class="max-w-4xl mx-auto">
        <!-- Job Summary Card -->
        <div class="bg-white rounded-2xl shadow-lg mb-8 p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
                <span class="icon text-blue-600 text-2xl">üíº</span>
                Position Summary
            </h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="flex items-center gap-3 p-4 bg-blue-50 rounded-xl">
                    <span class="icon text-blue-600 text-2xl">üìç</span>
                    <div>
                        <p class="text-sm text-gray-600 font-medium">Location</p>
                        <p class="font-semibold text-gray-900">{{ jobRole.location }}</p>
                    </div>
                </div>
                
                <div class="flex items-center gap-3 p-4 bg-green-50 rounded-xl">
                    <span class="icon text-green-600 text-2xl">üè∑Ô∏è</span>
                    <div>
                        <p class="text-sm text-gray-600 font-medium">Capability</p>
                        <p class="font-semibold text-gray-900">{{ jobRole.capability }}</p>
                    </div>
                </div>
                
                <div class="flex items-center gap-3 p-4 bg-purple-50 rounded-xl">
                    <span class="icon text-purple-600 text-2xl">üíº</span>
                    <div>
                        <p class="text-sm text-gray-600 font-medium">Band Level</p>
                        <span class="inline-block bg-purple-600 text-white px-3 py-1 rounded-full text-sm font-semibold">{{ jobRole.band | formatBand }}</span>
                    </div>
                </div>
                
                <div class="flex items-center gap-3 p-4 bg-orange-50 rounded-xl">
                    <span class="icon text-orange-600 text-2xl">üìÖ</span>
                    <div>
                        <p class="text-sm text-gray-600 font-medium">Closing Date</p>
                        <p class="font-semibold text-gray-900">{{ jobRole.closingDate | formatDate }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Application Form -->
        <div class="bg-white rounded-2xl shadow-lg mb-8 p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
                <span class="icon text-green-600 text-2xl">üìÑ</span>
                {% if isEditMode %}
                    Update Application Details
                {% else %}
                    Your Application Details
                {% endif %}
            </h2>
            
            <form action="/job-roles/{{ jobRole.jobRoleId }}/apply" method="POST" enctype="multipart/form-data" class="space-y-6">
                <!-- Hidden field for edit mode -->
                {% if isEditMode and existingApplication %}
                <input type="hidden" name="editApplicationId" value="{{ existingApplication.applicationId }}">
                {% endif %}

                <!-- Instructions -->
                <div class="bg-blue-50 border-l-4 border-blue-600 p-6 rounded-xl">
                    <h3 class="text-lg font-semibold text-blue-900 mb-3 flex items-center gap-2">
                        <span class="icon text-blue-600 text-xl">‚ÑπÔ∏è</span>
                        Application Guidelines
                    </h3>
                    <ul class="space-y-2 text-blue-800">
                        {% if isEditMode %}
                        <li class="flex items-start gap-2">
                            <span class="icon text-blue-600 mt-1">‚úì</span>
                            <span>You can update your cover letter and/or replace your CV</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="icon text-blue-600 mt-1">‚úì</span>
                            <span>If you don't upload a new CV, your existing CV will be kept</span>
                        </li>
                        {% else %}
                        <li class="flex items-start gap-2">
                            <span class="icon text-blue-600 mt-1">‚úì</span>
                            <span>All required fields must be completed</span>
                        </li>
                        {% endif %}
                        <li class="flex items-start gap-2">
                            <span class="icon text-blue-600 mt-1">‚úì</span>
                            <span>CV must be in PDF, DOC, or DOCX format (Max size: 5MB)</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="icon text-blue-600 mt-1">‚úì</span>
                            <span>Cover letter is optional but recommended</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="icon text-blue-600 mt-1">‚úì</span>
                            <span>Your application status will be set to "Pending" after submission</span>
                        </li>
                    </ul>
                </div>

                <!-- Personal Information Section -->
                <div class="space-y-6">
                    <h3 class="text-xl font-semibold text-gray-900 flex items-center gap-2">
                        <span class="icon text-blue-600">üë§</span>
                        Personal Information
                    </h3>

                    <!-- Full Name -->
                    <div>
                        <label for="applicant-name" class="block text-lg font-semibold text-gray-900 mb-3">
                            Full Name <span class="text-red-600">*</span>
                        </label>
                        <input 
                            type="text" 
                            id="applicant-name" 
                            name="applicantName" 
                            required
                            {% if isEditMode %}readonly{% endif %}
                            value="{% if existingApplication %}{{ existingApplication.applicantName }}{% endif %}"
                            maxlength="100"
                            placeholder="Enter your full name"
                            class="block w-full px-4 py-3 text-gray-900 border border-gray-300 rounded-xl {% if isEditMode %}bg-gray-200 cursor-not-allowed{% else %}bg-gray-50{% endif %} focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200"
                        >
                        <p class="mt-2 text-sm text-gray-600">
                            {% if isEditMode %}
                                Name cannot be changed when editing
                            {% else %}
                                Please provide your full legal name
                            {% endif %}
                        </p>
                    </div>

                    <!-- Email Address -->
                    <div>
                        <label for="applicant-email" class="block text-lg font-semibold text-gray-900 mb-3">
                            Email Address <span class="text-red-600">*</span>
                        </label>
                        <input 
                            type="email" 
                            id="applicant-email" 
                            name="applicantEmail" 
                            required
                            {% if isEditMode %}readonly{% endif %}
                            value="{% if existingApplication %}{{ existingApplication.applicantEmail }}{% endif %}"
                            maxlength="255"
                            placeholder="your.email@example.com"
                            class="block w-full px-4 py-3 text-gray-900 border border-gray-300 rounded-xl {% if isEditMode %}bg-gray-200 cursor-not-allowed{% else %}bg-gray-50{% endif %} focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200"
                        >
                        <p class="mt-2 text-sm text-gray-600">
                            {% if isEditMode %}
                                Email address cannot be changed when editing
                            {% else %}
                                We'll use this email to contact you about your application
                            {% endif %}
                        </p>
                    </div>
                </div>

                <!-- Cover Letter Section -->
                <div>
                    <label for="cover-letter" class="block text-lg font-semibold text-gray-900 mb-3">
                        Cover Letter <span class="text-gray-500 text-sm font-normal">(Optional)</span>
                    </label>
                    <textarea 
                        id="cover-letter" 
                        name="coverLetter" 
                        rows="8"
                        maxlength="5000"
                        placeholder="Tell us why you're interested in this role and what makes you a great fit..."
                        class="block w-full px-4 py-3 text-gray-900 border border-gray-300 rounded-xl bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 resize-vertical"
                    >{% if existingApplication and existingApplication.coverLetter %}{{ existingApplication.coverLetter }}{% endif %}</textarea>
                    ></textarea>
                    <p class="mt-2 text-sm text-gray-600">
                        Optional: Share your motivation and relevant experience (Max 5000 characters)
                    </p>
                </div>

                <!-- File Upload Section -->
                <div>
                    <label for="cv-upload" class="block text-lg font-semibold text-gray-900 mb-3">
                        CV/Resume 
                        {% if not isEditMode %}
                            <span class="text-red-600">*</span>
                        {% else %}
                            <span class="text-gray-500 text-sm font-normal">(Optional - upload only if replacing)</span>
                        {% endif %}
                    </label>
                    {% if isEditMode and existingApplication %}
                    <div class="mb-3 p-4 bg-green-50 border-l-4 border-green-600 rounded-lg">
                        <div class="flex items-start gap-3">
                            <i data-lucide="file-check" class="w-5 h-5 text-green-600 mt-0.5"></i>
                            <div>
                                <p class="text-sm font-semibold text-green-800 mb-1">
                                    Current CV File:
                                </p>
                                <p class="text-sm text-green-700 font-medium mb-2">
                                    {% if existingApplication.cvFileName %}
                                        üìÑ {{ existingApplication.cvFileName }}
                                    {% else %}
                                        CV already uploaded
                                    {% endif %}
                                </p>
                                <p class="text-xs text-green-600">
                                    üí° Upload a new file only if you want to replace your existing CV
                                </p>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    <div class="relative">
                        <input 
                            type="file" 
                            id="cv-upload" 
                            name="cv" 
                            accept=".pdf,.doc,.docx"
                            {% if not isEditMode %}required{% endif %}
                            class="block w-full text-gray-900 border border-gray-300 rounded-xl cursor-pointer bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 p-4 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-600 file:text-white hover:file:bg-blue-700 file:cursor-pointer transition-all duration-200"
                        >
                    </div>
                    <p class="mt-2 text-sm text-gray-600">
                        Supported formats: PDF, DOC, DOCX (Max size: 5MB)
                    </p>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col md:flex-row gap-4 pt-6">
                    <a 
                        href="{% if isEditMode %}/applications{% else %}/job-roles/{{ jobRole.jobRoleId }}{% endif %}" 
                        class="flex-1 inline-flex items-center justify-center px-8 py-4 bg-white border-2 border-gray-300 text-gray-700 font-bold rounded-xl shadow-lg hover:bg-gray-50 hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200"
                    >
                        <span class="icon mr-3 text-xl">‚¨ÖÔ∏è</span>
                        {% if isEditMode %}
                            Back to Applications
                        {% else %}
                            Back to Job Details
                        {% endif %}
                    </a>
                    
                    <button 
                        type="submit"
                        class="flex-1 inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-blue-600 to-green-600 text-white font-bold rounded-xl shadow-lg hover:from-blue-700 hover:to-green-700 hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200"
                    >
                        <span class="icon mr-3 text-xl">{% if isEditMode %}‚úèÔ∏è{% else %}üì§{% endif %}</span>
                        {% if isEditMode %}
                            Update Application
                        {% else %}
                            Submit Application
                        {% endif %}
                    </button>
                </div>
            </form>
        </div>

        <!-- Privacy Notice -->
        <div class="bg-gray-50 rounded-2xl shadow-lg p-6 text-center">
            <p class="text-sm text-gray-600">
                <span class="icon text-gray-500">üîí</span>
                By submitting this application, you agree to our 
                <a href="#privacy" class="text-blue-600 hover:text-blue-700 font-medium underline">Privacy Policy</a> 
                and 
                <a href="#terms" class="text-blue-600 hover:text-blue-700 font-medium underline">Terms of Service</a>.
                Your information will be kept confidential and used only for recruitment purposes.
            </p>
        </div>
    </div>
</div>
</main>
{% endblock %}
