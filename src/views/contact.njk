                    </div>
                    <p class="text-slate-800 text-sm">Belfast, London, Birmingham</p>
                </div>

                <!-- Ireland -->
                <div class="border border-slate-200 rounded-lg p-4 hover:border-green-400 hover:shadow-md transition-all duration-300">
                    <div class="flex items-center mb-3">
                        <div class="p-2 rounded-lg">
                            <i data-lucide="map-pin" class="w-5 h-5 text-green-600" style="stroke-width: 2.5;"></i>
                        </div>
                        <h3 class="font-semibold text-lg ml-3 text-slate-900">Ireland</h3>
                    </div>
                    <p class="text-slate-800 text-sm">Dublin, Cork</p>
                </div>

                <!-- Poland -->
                <div class="border border-slate-200 rounded-lg p-4 hover:border-purple-400 hover:shadow-md transition-all duration-300">
                    <div class="flex items-center mb-3">
                        <div class="p-2 rounded-lg">
                            <i data-lucide="map-pin" class="w-5 h-5 text-purple-600" style="stroke-width: 2.5;"></i>
                        </div>
                        <h3 class="font-semibold text-lg ml-3 text-slate-900">Poland</h3>
                    </div>
                    <p class="text-slate-800 text-sm">Gda≈Ñsk</p>
                </div>

                <!-- USA -->
                <div class="border border-slate-200 rounded-lg p-4 hover:border-orange-400 hover:shadow-md transition-all duration-300">
                    <div class="flex items-center mb-3">
                        <div class="p-2 rounded-lg">
                            <i data-lucide="map-pin" class="w-5 h-5 text-orange-600" style="stroke-width: 2.5;"></i>
                        </div>
                        <h3 class="font-semibold text-lg ml-3 text-slate-900">United States</h3>
                    </div>
                    <p class="text-slate-800 text-sm">New York, Washington DC</p>
                </div>

                <!-- Canada -->
                <div class="border border-slate-200 rounded-lg p-4 hover:border-red-400 hover:shadow-md transition-all duration-300">
                    <div class="flex items-center mb-3">
                        <div class="p-2 rounded-lg">
                            <i data-lucide="map-pin" class="w-5 h-5 text-red-600" style="stroke-width: 2.5;"></i>
                        </div>
                        <h3 class="font-semibold text-lg ml-3 text-slate-900">Canada</h3>
                    </div>
                    <p class="text-slate-800 text-sm">Toronto</p>
                </div>

                <!-- Netherlands -->
                <div class="border border-slate-200 rounded-lg p-4 hover:border-slate-800 hover:shadow-md transition-all duration-300">
                    <div class="flex items-center mb-3">
                        <div class="p-2 rounded-lg">
                            <i data-lucide="map-pin" class="w-5 h-5 text-slate-900" style="stroke-width: 2.5;"></i>
                        </div>
                        <h3 class="font-semibold text-lg ml-3 text-slate-900">Netherlands</h3>
                    </div>
                    <p class="text-slate-800 text-sm">Amsterdam</p>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    // Initialize Lucide icons
    if (typeof lucide !== 'undefined') {
        lucide.createIcons();
    }

    // Handle form submission
    document.getElementById('contact-form')?.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get form data
        const formData = new FormData(this);
        const data = Object.fromEntries(formData.entries());
        
        // Show success message (in production, this would submit to a backend)
        const form = this;
        form.reset();
        
        // Create and show success alert
        const successAlert = document.createElement('div');
        successAlert.className = 'alert alert-success mt-4 animate-pulse';
        successAlert.innerHTML = `
            <i data-lucide="check-circle" class="w-5 h-5"></i>
            <span>Thank you for your message! We'll get back to you soon.</span>
        `;
        
        form.appendChild(successAlert);
        
        // Re-initialize icons for the new alert
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
        
        // Remove alert after 5 seconds
        setTimeout(() => {
            successAlert.remove();
        }, 5000);
    });
</script>
{% endblock %}
