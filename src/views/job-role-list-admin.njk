{% extends "templates/layout.njk" %}
{% from "templates/pagination.njk" import paginationControls %}

{% block availableJobTitle %}Manage Job Roles - Admin Panel{% endblock %}

{% block content %}
<main id="main-content" class="pt-4">
<div class="container mx-auto px-4 py-8">
    <!-- Header Section -->
    <header class="text-center mb-16">
        <div class="bg-gradient-to-r from-purple-600 via-purple-700 to-indigo-600 rounded-3xl shadow-2xl p-12 text-white relative overflow-hidden">
            <!-- Animated background -->
            <div class="absolute inset-0 bg-gradient-to-r from-purple-600/20 via-purple-700/20 to-indigo-600/20 animate-pulse"></div>
            
            <!-- Decorative elements -->
            <div class="absolute top-4 right-4 w-20 h-20 bg-white/10 rounded-full blur-xl animate-pulse"></div>
            <div class="absolute bottom-4 left-4 w-16 h-16 bg-indigo-400/20 rounded-full blur-lg animate-pulse" style="animation-delay: 1s"></div>

            <!-- Content -->
            <div class="relative z-10">
                <!-- Kainos Logo -->
                <div class="flex items-center justify-center mb-8">
                    <img src="/kainos-dark-bg.png" alt="Kainos Logo" class="h-16 w-auto">
                </div>
                
                <h1 class="text-4xl md:text-6xl font-light mb-6">üìã Job Role Management</h1>
                <p class="text-lg opacity-90 mb-6">Admin Dashboard - Manage all job roles and positions</p>
                
                <div class="flex flex-col md:flex-row items-center justify-center gap-4 mb-4">
                    <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6">
                        <p class="text-xl">üëë Total Positions: {{ totalRoles }}</p>
                        {% if pagination %}
                            <p class="text-sm opacity-90 mt-1">
                                Showing page {{ pagination.currentPage }} of {{ pagination.totalPages }}
                            </p>
                        {% endif %}
                    </div>
                    
                    <!-- Admin Action Buttons -->
                    <div class="flex flex-wrap gap-3">
                        <a href="/admin/job-roles/new" class="bg-green-600 text-white font-semibold py-3 px-6 rounded-2xl hover:bg-green-700 transition-all duration-200 flex items-center gap-2 shadow-lg">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                            ‚ûï Add New Job Role
                        </a>
                        <a href="/admin/job-roles/export" class="bg-blue-600 text-white font-semibold py-3 px-6 rounded-2xl hover:bg-blue-700 transition-all duration-200 flex items-center gap-2 shadow-lg">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            üìä Generate Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Search and Filter Section -->
    <section class="mb-8">
        <div class="bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
            <form action="/job-roles" method="GET" class="space-y-6">
                <!-- Search Input -->
                <div class="form-control w-full">
                    <label for="search" class="label">
                        <span class="label-text text-lg font-semibold text-gray-700">üîç Search Job Roles</span>
                    </label>
                    <input 
                        type="text" 
                        id="search" 
                        name="search" 
                        placeholder="Search by job role name (e.g., Software Engineer, Product Manager)" 
                        value="{{ searchParams.search if searchParams else '' }}"
                        class="input input-bordered input-lg w-full bg-gray-50 text-gray-900 border-gray-300 focus:border-purple-500 focus:bg-white"
                        aria-label="Search job roles by name"
                    />
                </div>

                <!-- Filter Dropdowns Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <!-- Capability Filter -->
                    <div class="form-control w-full">
                        <label for="capability" class="label">
                            <span class="label-text font-semibold text-gray-700">Capability</span>
                        </label>
                        <select 
                            id="capability" 
                            name="capability" 
                            class="select select-bordered w-full bg-gray-50 text-gray-900 border-gray-300 focus:border-purple-500 focus:bg-white"
                            aria-label="Filter by capability"
                        >
                            <option value="">All Capabilities</option>
                            {% if filterOptions and filterOptions.capabilities %}
                                {% for cap in filterOptions.capabilities %}
                                    <option value="{{ cap }}" {% if searchParams and searchParams.capability == cap %}selected{% endif %}>
                                        {{ cap }}
                                    </option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>

                    <!-- Location Filter -->
                    <div class="form-control w-full">
                        <label for="location" class="label">
                            <span class="label-text font-semibold text-gray-700">Location</span>
                        </label>
                        <select 
                            id="location" 
                            name="location" 
                            class="select select-bordered w-full bg-gray-50 text-gray-900 border-gray-300 focus:border-purple-500 focus:bg-white"
                            aria-label="Filter by location"
                        >
                            <option value="">All Locations</option>
                            {% if filterOptions and filterOptions.locations %}
                                {% for loc in filterOptions.locations %}
                                    <option value="{{ loc }}" {% if searchParams and searchParams.location == loc %}selected{% endif %}>
                                        {{ loc }}
                                    </option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>

                    <!-- Band Filter -->
                    <div class="form-control w-full">
                        <label for="band" class="label">
                            <span class="label-text font-semibold text-gray-700">Band Level</span>
                        </label>
                        <select 
                            id="band" 
                            name="band" 
                            class="select select-bordered w-full bg-gray-50 text-gray-900 border-gray-300 focus:border-purple-500 focus:bg-white"
                            aria-label="Filter by band level"
                        >
                            <option value="">All Bands</option>
                            {% if filterOptions and filterOptions.bands %}
                                {% for b in filterOptions.bands %}
                                    <option value="{{ b }}" {% if searchParams and searchParams.band == b %}selected{% endif %}>
                                        {{ b }}
                                    </option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>

                    <!-- Status Filter -->
                    <div class="form-control w-full">
                        <label for="status" class="label">
                            <span class="label-text font-semibold text-gray-700">Status</span>
                        </label>
                        <select 
                            id="status" 
                            name="status" 
                            class="select select-bordered w-full bg-gray-50 text-gray-900 border-gray-300 focus:border-purple-500 focus:bg-white"
                            aria-label="Filter by status"
                        >
                            <option value="">All Statuses</option>
                            <option value="Open" {% if searchParams and searchParams.status == "Open" %}selected{% endif %}>Open</option>
                            <option value="Closed" {% if searchParams and searchParams.status == "Closed" %}selected{% endif %}>Closed</option>
                        </select>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 justify-end">
                    <button 
                        type="submit" 
                        class="btn bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white border-none shadow-lg flex-1 sm:flex-none"
                        aria-label="Apply search and filters"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                        Search Jobs
                    </button>
                    <a 
                        href="/job-roles" 
                        class="btn btn-outline border-2 border-gray-300 text-gray-700 hover:bg-gray-50 hover:border-gray-400 flex-1 sm:flex-none"
                        aria-label="Clear all filters and show all jobs"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                        Clear Filters
                    </a>
                </div>
            </form>
        </div>
    </section>

    <!-- Active Filters Display -->
    {% if activeFilters and activeFilters.length > 0 %}
    <section class="mb-8">
        <div class="flex flex-wrap items-center gap-2">
            <span class="text-sm font-semibold text-gray-700">Active Filters:</span>
            {% for filter in activeFilters %}
                <div class="badge badge-lg bg-purple-100 text-purple-800 border-purple-200 gap-2">
                    {{ filter.label }}
                    <a 
                        href="/job-roles?{% for param in ['search', 'capability', 'location', 'band', 'status'] %}{% if param != filter.type and searchParams[param] %}{{ param }}={{ searchParams[param] }}{% if not loop.last %}&{% endif %}{% endif %}{% endfor %}"
                        class="hover:text-red-600"
                        aria-label="Remove {{ filter.label }} filter"
                    >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </a>
                </div>
            {% endfor %}
            <a href="/job-roles" class="text-sm text-purple-600 hover:text-purple-800 underline ml-2">
                Clear All
            </a>
        </div>
    </section>
    {% endif %}

    <!-- Job Roles Table (Admin View with Full CRUD) -->
    {% if jobRoles and jobRoles.length > 0 %}
        <section class="mb-16">
            <div class="overflow-x-auto">
                <table class="w-full border-collapse !border-gray-300">
                    <thead>
                        <tr class="!bg-gray-200 !border-b !border-gray-300">
                            <th class="!border !border-gray-300 px-4 py-3 text-left font-semibold !text-gray-800">Job Role</th>
                            <th class="!border !border-gray-300 px-4 py-3 text-left font-semibold !text-gray-800">Location</th>
                            <th class="!border !border-gray-300 px-4 py-3 text-left font-semibold !text-gray-800">Capability</th>
                            <th class="!border !border-gray-300 px-4 py-3 text-center font-semibold !text-gray-800">Band</th>
                            <th class="!border !border-gray-300 px-4 py-3 text-center font-semibold !text-gray-800">Positions</th>
                            <th class="!border !border-gray-300 px-4 py-3 text-left font-semibold !text-gray-800">Closing Date</th>
                            <th class="!border !border-gray-300 px-4 py-3 text-center font-semibold !text-gray-800">Status</th>
                            <th class="!border !border-gray-300 px-4 py-3 text-center font-semibold !text-gray-800">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for role in jobRoles %}
                            <tr class="!bg-white !border-b !border-gray-300 hover:!bg-gray-50">
                                <td class="!border !border-gray-300 px-4 py-3 !text-gray-700">{{ role.roleName }}</td>
                                <td class="!border !border-gray-300 px-4 py-3 !text-gray-700">{{ role.location }}</td>
                                <td class="!border !border-gray-300 px-4 py-3 !text-gray-700">{{ role.capability }}</td>
                                <td class="!border !border-gray-300 px-4 py-3 text-center !text-gray-700">{{ role.band | formatBand }}</td>
                                <td class="!border !border-gray-300 px-4 py-3 text-center !text-gray-700">{{ role.numberOfOpenPositions }}</td>
                                <td class="!border !border-gray-300 px-4 py-3 !text-gray-700">{{ role.closingDate | formatDate }}</td>
                                <td class="!border !border-gray-300 px-4 py-3 text-center !text-gray-700">{{ role.status }}</td>
                                <td class="border border-gray-300 px-4 py-3">
                                    <div class="flex flex-col sm:flex-row gap-2 justify-center">
                                        <a href="/job-roles/{{ role.jobRoleId }}" class="flex-1 bg-blue-50 border-2 border-blue-600 text-blue-600 font-medium py-1 px-2 rounded-lg hover:bg-blue-100 transition-colors duration-200 flex items-center justify-center text-xs">
                                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            </svg>
                                            View
                                        </a>
                                        <a href="/job-roles/{{ role.jobRoleId }}/applicants" class="flex-1 bg-pink-50 border-2 border-pink-600 text-pink-600 font-medium py-1 px-2 rounded-lg hover:bg-pink-100 transition-colors duration-200 flex items-center justify-center text-xs">
                                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                            </svg>
                                            Applicants
                                        </a>
                                        <a href="/admin/job-roles/{{ role.jobRoleId }}/edit" class="flex-1 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-medium py-1 px-2 rounded-lg hover:from-purple-700 hover:to-indigo-700 transition-colors duration-200 flex items-center justify-center text-xs">
                                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                            Edit
                                        </a>
                                        <button 
                                            class="flex-1 bg-red-600 text-white font-medium py-1 px-2 rounded-lg hover:bg-red-700 transition-colors duration-200 flex items-center justify-center text-xs"
                                            title="Delete"
                                            onclick="if(confirm('Are you sure you want to delete this job role? This action cannot be undone.')) { fetch('/job-roles/{{ role.jobRoleId }}', { method: 'DELETE' }).then(r => r.json()).then(d => { if(d.success) { window.location.reload(); } else { alert(d.message); } }); }"
                                        >
                                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>

        <!-- Pagination Controls -->
        {% if pagination and paginationUrls %}
            {{ paginationControls(pagination, paginationUrls) }}
        {% endif %}
    {% else %}
        <!-- No Jobs Available -->
        <section class="text-center py-16">
            <div class="bg-white rounded-3xl shadow-xl p-12 max-w-2xl mx-auto">
                <svg class="w-16 h-16 text-gray-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 00-2 2H10a2 2 0 00-2-2V6m8 0h2a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2h2" />
                </svg>
                <h2 class="text-3xl font-bold text-slate-900 mb-6">No Job Roles Created</h2>
                <p class="text-slate-700 mb-8 text-lg leading-relaxed">No job roles have been created yet. Create your first one to get started!</p>
                <a href="/admin/job-roles/new" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-xl hover:from-purple-700 hover:to-indigo-700 transition-all duration-200 transform hover:scale-105 shadow-lg">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    Create First Job Role
                </a>
            </div>
        </section>
    {% endif %}
</div>
</main>

<!-- Pagination JavaScript -->
<script src="/js/pagination.js"></script>
{% endblock %}
