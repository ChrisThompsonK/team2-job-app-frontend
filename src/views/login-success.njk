{% extends "templates/layout.njk" %}

{% block applicationTitle %}Login Successful - Kainos Job Application{% endblock %}

{% block content %}
<main id="main-content" class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-green-50 via-white to-blue-50">
    <div class="max-w-md w-full space-y-8">
        <!-- Success Icon and Message -->
        <div class="text-center">
            <div class="mx-auto flex items-center justify-center h-20 w-20 rounded-full bg-green-100 mb-6">
                <svg class="h-12 w-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
            </div>
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Logged In Successfully!</h2>
            <p class="text-gray-600">Welcome back to Kainos</p>
        </div>

        <!-- Success Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
            <div class="space-y-4">
                <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded-lg">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <p class="text-sm text-green-700">You have successfully authenticated!</p>
                    </div>
                </div>

                {% if user %}
                <div class="pt-4">
                    <h3 class="text-sm font-semibold text-gray-700 mb-2">User Information:</h3>
                    <div class="bg-gray-50 rounded-lg p-4 space-y-2">
                        {% if user.username %}
                        <p class="text-sm text-gray-600"><span class="font-medium">Username:</span> {{ user.username }}</p>
                        {% endif %}
                        {% if user.user_type %}
                        <p class="text-sm text-gray-600"><span class="font-medium">User Type:</span> {{ user.user_type }}</p>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
            </div>

            <!-- Action Buttons -->
            <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-4">
                <a href="/job-roles" class="bg-gradient-to-r from-blue-600 to-green-600 text-white font-semibold py-3 px-4 rounded-lg hover:from-blue-700 hover:to-green-700 transition-all duration-200 flex items-center justify-center gap-2 shadow-lg hover:shadow-xl">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m8 0h2a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2h2" />
                    </svg>
                    <span>Browse Jobs</span>
                </a>
                <a href="/" class="bg-white border-2 border-gray-300 text-gray-700 font-semibold py-3 px-4 rounded-lg hover:bg-gray-50 hover:border-gray-400 transition-all duration-200 flex items-center justify-center gap-2 shadow-sm hover:shadow-md">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                    <span>Home</span>
                </a>
            </div>
        </div>

        <!-- Testing Note -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <p class="text-xs text-blue-700 text-center">
                <span class="font-semibold">Testing Mode:</span> This is a temporary success page for testing the login flow.
            </p>
        </div>
    </div>
</main>
{% endblock %}
