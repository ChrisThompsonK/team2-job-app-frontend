<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Job Roles at Kainos</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gray-100 font-sans">
    <div class="max-w-7xl mx-auto p-8">
        <!-- Header -->
        <div class="card bg-base-100 shadow-xl mb-8">
            <div class="card-body">
                <h1 class="card-title text-3xl text-primary">Available Job Roles at Kainos</h1>
                <div class="alert alert-info">
                    {{ lucideIcon('info') | safe }}
                    <span>Showing {{ totalRoles }} open job role{{ 's' if totalRoles != 1 else '' }}</span>
                </div>
            </div>
        </div>

        <!-- Job Roles List -->
        {% if jobRoles and jobRoles.length > 0 %}
            <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
                {% for jobRole in jobRoles %}
                    <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
                        <div class="card-body">
                            <h2 class="card-title text-xl text-primary">
                                <a href="/job-roles/{{ jobRole.jobRoleId }}" class="hover:underline">
                                    {{ jobRole.roleName }}
                                </a>
                            </h2>
                            
                            <div class="space-y-3 mt-4">
                                <div class="flex items-center gap-2">
                                    {{ lucideIcon('map-pin', { size: 20, className: 'w-5 h-5 text-secondary' }) | safe }}
                                    <span class="text-sm font-medium">{{ jobRole.location }}</span>
                                </div>
                                
                                <div class="flex items-center gap-2">
                                    {{ lucideIcon('tag', { size: 20, className: 'w-5 h-5 text-accent' }) | safe }}
                                    <span class="text-sm">{{ jobRole.capability }}</span>
                                </div>
                                
                                <div class="flex items-center gap-2">
                                    {{ lucideIcon('briefcase', { size: 20, className: 'w-5 h-5 text-info' }) | safe }}
                                    <span class="badge badge-outline">{{ jobRole.band }}</span>
                                </div>
                                
                                <div class="flex items-center gap-2">
                                    {{ lucideIcon('calendar', { size: 20, className: 'w-5 h-5 text-warning' }) | safe }}
                                    <span class="text-sm">Closes: {{ jobRole.closingDate }}</span>
                                </div>
                            </div>
                            
                            <div class="card-actions justify-between mt-4">
                                <a href="/job-roles/{{ jobRole.jobRoleId }}" class="btn btn-outline btn-sm">
                                    {{ lucideIcon('info', { size: 16, className: 'w-4 h-4 mr-1' }) | safe }}
                                    View Details
                                </a>
                                <button class="btn btn-primary btn-sm">Apply Now</button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body text-center">
                    <h2 class="card-title justify-center text-2xl text-gray-500">No Job Roles Available</h2>
                    <p class="text-gray-400">There are currently no open job roles. Please check back later!</p>
                    <div class="card-actions justify-center mt-4">
                        <a href="/" class="btn btn-primary">Go Home</a>
                    </div>
                </div>
            </div>
        {% endif %}
        
        <!-- Back to Home -->
        <div class="text-center mt-8">
            <a href="/" class="btn btn-outline">‚Üê Back to Home</a>
        </div>
    </div>
</body>
</html>