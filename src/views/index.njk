{% extends "templates/layout.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<main class="pt-4">
<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <header class="text-center mb-12">
        <div class="bg-gradient-to-r from-blue-600 via-blue-700 to-green-600 rounded-3xl shadow-2xl p-12 text-white relative overflow-hidden">
            <!-- Animated background -->
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 via-blue-700/20 to-green-600/20 animate-pulse"></div>
            
            <!-- Decorative elements -->
            <div class="absolute top-4 right-4 w-20 h-20 bg-white/10 rounded-full blur-xl animate-pulse"></div>
            <div class="absolute bottom-4 left-4 w-16 h-16 bg-green-400/20 rounded-full blur-lg animate-pulse" style="animation-delay: 1s"></div>

            <!-- Content -->
            <div class="relative z-10">
                <!-- Kainos Logo -->
                <div class="flex items-center justify-center mb-8">
                    <span class="text-5xl font-light tracking-wide">kain</span>
                    <div class="kainos-logo-sphere w-10 h-10 mx-2"></div>
                    <span class="text-5xl font-light tracking-wide">s</span>
                    <span class="text-3xl font-light ml-2">¬Æ</span>
                </div>
                
                <h1 class="text-4xl md:text-6xl font-light mb-6">{{ title }}</h1>
                
                <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6 inline-block">
                    <p class="text-xl">üéâ Premium Job Application Portal</p>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <section class="max-w-6xl mx-auto">
        <!-- Info Cards -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
            <div class="bg-white rounded-2xl shadow-lg p-6 border-l-4 border-green-500 hover:shadow-xl transition-shadow">
                <h3 class="text-sm font-semibold text-gray-600 uppercase mb-2">Message</h3>
                <p class="text-xl font-bold text-blue-900">{{ message }}</p>
            </div>
            
            <div class="bg-white rounded-2xl shadow-lg p-6 border-l-4 border-blue-500 hover:shadow-xl transition-shadow">
                <h3 class="text-sm font-semibold text-gray-600 uppercase mb-2">Application</h3>
                <p class="text-xl font-bold text-green-600">{{ app }}</p>
            </div>
            
            <div class="bg-white rounded-2xl shadow-lg p-6 border-l-4 border-purple-500 hover:shadow-xl transition-shadow">
                <h3 class="text-sm font-semibold text-gray-600 uppercase mb-2">Version</h3>
                <p class="text-xl font-bold text-purple-600">{{ version }}</p>
            </div>
            
            <div class="bg-white rounded-2xl shadow-lg p-6 border-l-4 border-green-500 hover:shadow-xl transition-shadow">
                <h3 class="text-sm font-semibold text-gray-600 uppercase mb-2">Environment</h3>
                <p class="text-xl font-bold text-green-600">{{ environment }}</p>
            </div>
        </div>

        <!-- Success Alert -->
        <div class="bg-green-50 border-l-4 border-green-400 p-6 rounded-r-2xl mb-12">
            <div class="flex items-center">
                <svg class="w-8 h-8 text-green-400 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                    <h3 class="text-lg font-semibold text-green-800">System Ready</h3>
                    <p class="text-green-700">Enhanced Nunjucks templating with premium daisyUI components!</p>
                </div>
            </div>
        </div>

        <!-- Timestamp Badge -->
        <div class="text-center mb-12">
            <div class="inline-block bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-3 rounded-full shadow-lg">
                <span class="text-lg font-semibold">‚è∞ Current Time: {{ timestamp }}</span>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="text-center space-y-4 md:space-y-0 md:space-x-6 md:flex md:justify-center">
            <a href="/job-roles" 
               class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-bold rounded-2xl shadow-lg hover:from-blue-700 hover:to-blue-800 hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200 text-lg">
                <span class="text-white">Explore Opportunities</span>
                <svg class="w-6 h-6 ml-2 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
                </svg>
            </a>
            
            <button class="inline-flex items-center px-8 py-4 bg-white border-3 border-blue-600 text-blue-600 font-bold rounded-2xl shadow-lg hover:bg-blue-600 hover:text-white transform hover:-translate-y-1 transition-all duration-200 text-lg">
                Learn More About Kainos
            </button>
        </div>
    </section>
</div>
</main>
{% endblock %}