{% extends "templates/layout.njk" %}

{% block applicationTitle %}Home - Kainos Job Application{% endblock %}

{% block content %}
<main id="main-content" class="container mx-auto px-4 landscape:px-6 md:px-8 py-8 landscape:py-10 md:py-12">
    <!-- Hero Section -->
    <div class="text-center mb-12 bg-gradient-to-r from-blue-600 to-green-600 rounded-xl py-12 px-6 shadow-xl">
        <div class="flex items-center justify-center mb-6">
            <img src="/kainos-dark-bg.png" alt="Kainos Logo" class="h-12 landscape:h-14 md:h-16 w-auto">
        </div>
        <h1 class="text-4xl landscape:text-5xl md:text-6xl font-bold text-white mb-4">
            {{ title }}
        </h1>
        <p class="text-lg landscape:text-xl md:text-2xl text-white/90 max-w-3xl mx-auto">
            Discover Your Next Career Opportunity with Kainos
        </p>
    </div>

    <!-- Welcome Card -->
    <div class="card bg-white shadow-xl mb-8 border border-slate-200">
        <div class="card-body">
            <h2 class="card-title text-2xl landscape:text-3xl md:text-3xl text-blue-600 mb-4">
                <i data-lucide="sparkles" class="w-8 h-8"></i>
                Welcome to Kainos Careers
            </h2>
            <p class="text-slate-800 text-base landscape:text-lg md:text-lg leading-relaxed">
                Join a team that thinks without limitations. At Kainos, we're transforming the way organizations work 
                through innovative digital solutions. Explore exciting opportunities across technology, consulting, 
                data science, and more. Your journey to making a difference starts here.
            </p>
        </div>
    </div>

    <!-- Features Section -->
    <div class="grid grid-cols-1 landscape:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Browse Jobs -->
        <div class="card bg-white border border-slate-200 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="card-body">
                <div class="flex items-center mb-4">
                    <div class="p-3 rounded-lg">
                        <i data-lucide="search" class="w-6 h-6 text-blue-600" style="stroke-width: 2.5;"></i>
                    </div>
                    <h3 class="card-title text-xl ml-3 text-slate-900">Browse Opportunities</h3>
                </div>
                <p class="text-slate-800">
                    Explore our current job openings across various departments and locations. Find the perfect role that matches your skills and ambitions.
                </p>
            </div>
        </div>

        <!-- Easy Application -->
        <div class="card bg-white border border-slate-200 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="card-body">
                <div class="flex items-center mb-4">
                    <div class="p-3 rounded-lg">
                        <i data-lucide="file-text" class="w-6 h-6 text-green-600" style="stroke-width: 2.5;"></i>
                    </div>
                    <h3 class="card-title text-xl ml-3 text-slate-900">Easy Application</h3>
                </div>
                <p class="text-slate-800">
                    Submit your application with our streamlined process. Quick, simple, and designed to showcase your talents effectively.
                </p>
            </div>
        </div>

        <!-- Track Progress -->
        <div class="card bg-white border border-slate-200 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="card-body">
                <div class="flex items-center mb-4">
                    <div class="p-3 rounded-lg">
                        <i data-lucide="activity" class="w-6 h-6 text-purple-600" style="stroke-width: 2.5;"></i>
                    </div>
                    <h3 class="card-title text-xl ml-3 text-slate-900">Track Your Journey</h3>
                </div>
                <p class="text-slate-800">
                    Stay updated on your application status and receive timely notifications about your progress through our recruitment process.
                </p>
            </div>
        </div>

        <!-- Career Growth -->
        <div class="card bg-white border border-slate-200 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="card-body">
                <div class="flex items-center mb-4">
                    <div class="p-3 rounded-lg">
                        <i data-lucide="trending-up" class="w-6 h-6 text-orange-600" style="stroke-width: 2.5;"></i>
                    </div>
                    <h3 class="card-title text-xl ml-3 text-slate-900">Career Growth</h3>
                </div>
                <p class="text-slate-800">
                    Unlock continuous learning opportunities and professional development programs to advance your career with Kainos.
                </p>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="text-center bg-gradient-to-r from-blue-600 to-green-600 rounded-xl py-12 px-6 shadow-2xl">
        <h2 class="text-3xl landscape:text-4xl md:text-4xl font-bold text-white mb-4">
            Ready to Start Your Journey?
        </h2>
        <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
            Explore our current opportunities and take the first step towards an exciting career with Kainos.
        </p>
        <div class="flex flex-col landscape:flex-row md:flex-row gap-4 justify-center items-center">
            <a href="/job-roles" 
               class="btn btn-lg bg-white text-blue-600 hover:bg-slate-100 border-0 shadow-lg min-w-[200px]">
                <i data-lucide="briefcase" class="w-5 h-5"></i>
                View Job Openings
            </a>
            <a href="/about" 
               class="btn btn-lg btn-outline border-2 border-white text-white hover:bg-white hover:text-blue-600 min-w-[200px]">
                <i data-lucide="info" class="w-5 h-5"></i>
                Learn More About Us
            </a>
        </div>
    </div>
</main>

<script>
    // Initialize Lucide icons
    if (typeof lucide !== 'undefined') {
        lucide.createIcons();
    }
</script>
{% endblock %}