{% extends "templates/layout.njk" %}

{% block applicationTitle %}Access Denied | Kainos{% endblock %}

{% block content %}
<main id="main-content" class="pt-4">
  <div class="container mx-auto px-4 py-8">
    <div class="min-h-screen flex flex-col items-center justify-center">
      <!-- Error Container -->
      <div class="max-w-md w-full">
        <!-- Animated Error Icon -->
        <div class="mb-8 flex justify-center">
          <div class="relative">
            <div class="absolute inset-0 bg-red-100 rounded-full blur-lg opacity-50 animate-pulse"></div>
            <div class="relative bg-gradient-to-br from-red-500 to-red-600 rounded-full p-6 text-white shadow-xl">
              <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Error Message -->
        <div class="bg-white rounded-2xl shadow-lg p-8 text-center">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Access Denied</h1>
          <p class="text-xl text-gray-600 mb-6">üö´ {{ message or 'You do not have permission to access this page.' }}</p>

          <!-- Additional Info -->
          <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4 mb-8 text-left">
            <p class="text-sm text-red-800">
              <span class="font-semibold">Why am I seeing this?</span><br>
              This page requires admin privileges. Only administrators can access this area of the application.
            </p>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-col gap-3">
            <a href="/job-roles" class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-all duration-200 shadow-md hover:shadow-lg">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Browse Job Roles
            </a>
            
            <a href="/" class="inline-flex items-center justify-center px-6 py-3 bg-white border-2 border-blue-600 text-blue-600 font-semibold rounded-lg hover:bg-blue-50 transition-all duration-200 shadow-md hover:shadow-lg">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4" />
              </svg>
              Return to Home
            </a>
          </div>

          <!-- Contact Support -->
          <div class="mt-8 pt-6 border-t border-gray-200">
            <p class="text-sm text-gray-600">
              If you believe this is an error, please 
              <a href="/contact" class="text-blue-600 hover:text-blue-700 font-semibold">contact support</a>.
            </p>
          </div>
        </div>

        <!-- Back to Home Link -->
        <div class="text-center mt-6">
          <a href="/" class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium transition-colors duration-200">
            ‚Üê Back to Home
          </a>
        </div>
      </div>
    </div>
  </div>
</main>
{% endblock %}
